# Camera Configuration
CAMERA_IP=192.168.1.64
CAMERA_USERNAME=admin
CAMERA_PASSWORD=your_password_here
CAMERA_RTSP_PORT=554

# RTSP Stream URLs
CAMERA_MAIN_STREAM=rtsp://{username}:{password}@{ip}:{port}/Streaming/Channels/101
CAMERA_SUB_STREAM=rtsp://{username}:{password}@{ip}:{port}/Streaming/Channels/102

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./face_recognition.db
# For PostgreSQL (future migration):
# DATABASE_URL=postgresql://user:password@localhost:5432/face_recognition

# Face Recognition Settings
FACE_DETECTION_CONFIDENCE=0.5
FACE_RECOGNITION_THRESHOLD=0.6
MAX_FACE_DISTANCE=0.6

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Paths
FACE_DETECTION_MODEL=data/models/face_detection
FACE_RECOGNITION_MODEL=data/models/face_recognition

# Image Storage
IMAGES_DIR=data/images
EMBEDDINGS_DIR=data/embeddings

# Performance Settings
ENABLE_GPU=True
USE_TENSORRT=False
FRAME_SKIP=2
MAX_WORKERS=4

# Augmentation Settings
ENABLE_AUGMENTATION=True
AUGMENTATION_COUNT=5
USE_DIFFUSION=False

# Alert System
ALERT_WEBHOOK_URL=                    # Optional: Webhook URL for alert notifications (e.g., https://hooks.slack.com/...)
ALERT_EMAIL_RECIPIENTS=               # Optional: Comma-separated email addresses for alerts
ALERT_COOLDOWN_SECONDS=60             # Cooldown period between similar alerts (default: 60)
ALERT_ON_UNKNOWN=false                # Trigger alerts for unknown persons (default: false) - CURRENTLY DISABLED
ALERT_ON_KNOWN=true                   # Trigger alerts for known persons (default: true) - CURRENTLY ENABLED
ALERT_SAVE_SNAPSHOT=true              # Save frame snapshots with alerts (default: true)

# NOTE: Currently configured to alert on KNOWN persons only (Mujeeb, Safyan)
# Change ALERT_ON_UNKNOWN=true and ALERT_ON_KNOWN=false to alert on unknown persons instead
